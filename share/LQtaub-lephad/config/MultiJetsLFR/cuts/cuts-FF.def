# -*- mode: tqfolder -*-

################################################################
##  MultiJets Lepton Fake Factor.
#################################################################

$include("LQtaub-lephad/config/common/cuts/cuts.def");

@ */CutMaterialCorrection {
    +CutTruth {
        <.cutExpression="{ $(isData) || $(isSig) || ($(isTTL) && ([TruthTauSelector] == 20 || [TruthTauSelector] == 5 ||[TruthTauSelector] == 30)) || 
         ($(isJet) && [TruthTauSelector] == -30)}",
         .weightExpression="{$(isData) ? 1 : [ScaleFactor]}", .title="Truth">

        +CutLeptonBasic {
            <.cutExpression="lep_0_p4.Pt() > 30 && lep_0_id_medium == 1", .title = "Lepton basic cut">
        
            +CutTauBasic {
                <.cutExpression="tau_0_p4.Pt() > 25 && fabs(tau_0_p4.Eta()) < 2.3 &&
                  (tau_0_n_charged_tracks == 1 || tau_0_n_charged_tracks == 3) ", .title="Tau basic cut">

                +CutTauIDScore {
                    <.cutExpression="$(TauIDScore) < $(TauIDScoreCut)", .title="Tau score cut">
                } #End: CutTauIDScore
            } #End: CutTauBasic
        } #End: CutLeptonBasic
    } #End: CutTruth
} #End: CutMaterialCorrection

# Divide to Bveto/Btag region
@ */CutTauIDScore {
    +CutBtag {
        <.cutExpression="$(NbJets)==1", .title="Btag", BJET="Btag",
         .weightExpression="$(isTop) && $(ApplyTopSF) ? $(TopSF) : 1">
    } #End: CutBtag
} #End: CutTauIDScore

# Divide into OS/SS region
@ */CutBtag {
    +CutSS {
        <.cutExpression="lephad_qxq == 1", .title="SS">
    } #End: CutSS
} #End: CutBtag


# Divide to different MT region
@ */CutSS {
    +CutBtagMultiJetsLFR {
        <.cutExpression="lephad_mt_lep0_met <= 30 && met_reco_p4.Et() <= 50", 
        .title="BtagMultiJetsLFR">
    }
    +CutBtagMultiJetsWFR {
        <.cutExpression="lephad_mt_lep0_met > 60 && lephad_mt_lep0_met <= 120", 
        .title="BtagMultiJetsWFR">
    }
    +CutBtagMultiJetsTFR {
        <.cutExpression="lephad_mt_lep0_met > 120", 
        .title="BtagMultiJetsTFR">
    }
}

# Divide to PassISO/FailISO region
@ */CutBtagMultiJetsLFR {
    +CutSSBtagMultiJetsLFRPassISO {
        <.cutExpression="($(isMultiJetsFake) ? $(isFailISO) : $(isPassISO))",
         .weightExpression="($(isMultiJetsFake) ? ($(MultiJetsLFF))*($(MultiJetsSFSYS))*($(LeptonFakeNom)) : 1)", .title="SSBtagMultiJetsLFRPassISO">
    }

    +CutSSBtagMultiJetsLFRFailISO {
        <.cutExpression="$(isFailISO)", .title="SSBtagMultiJetsLFRFailISO">
    }
}

# Divide to different MT region
@ */CutBtagMultiJetsWFR {
    +CutSSBtagMultiJetsWFRPassISO {
        <.cutExpression="($(isMultiJetsFake) ? $(isFailISO) : $(isPassISO))",
         .weightExpression="($(isMultiJetsFake) ? ($(MultiJetsLFF))*($(MultiJetsSFSYS))*($(LeptonFakeNom)) : 1)", .title="SSBtagMultiJetsWFRPassISO">
    }
}

@ */CutBtagMultiJetsTFR {
    +CutSSBtagMultiJetsTFRPassISO {
        <.cutExpression="($(isMultiJetsFake) ? $(isFailISO) : $(isPassISO))",
         .weightExpression="($(isMultiJetsFake) ? ($(MultiJetsLFF))*($(MultiJetsSFSYS))*($(LeptonFakeNom)) : 1)", .title="SSBtagMultiJetsTFRPassISO">
    }
}
